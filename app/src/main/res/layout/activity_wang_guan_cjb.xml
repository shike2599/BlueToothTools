<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/dp_10"
    tools:context="com.calypso.buetools.activity.WangGuanCJBActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPRS地址："
            android:textSize="18dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/GPRS_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00000001"
            android:textSize="18dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I P   地   址："
            android:textSize="18dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/ip_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="116.62.186.91"
            android:textSize="18dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡 检 时 间："
            android:textSize="18dp"
            android:layout_weight="1"
            />
        <Spinner
            android:id="@+id/time_Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/wangguan_RecyclerView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
